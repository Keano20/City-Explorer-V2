@page
@model CityExplorerV2.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>City Explorer</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body>
<main>
    <header class="admin-dashboard-header">
        <h1>Admin Dashboard</h1>
        <a href="/Index" class="return-home-button">Return to City Search</a>
        <nav aria-label="Dashboard Navigation">
            @if (HttpContext.Session.GetString("Username") != null)
            {
                <p class="welcome-message">
                    Welcome, @HttpContext.Session.GetString("Username")
                </p>
            }
            <ul>
                <li><button onclick="showTab('cities')">Manage Cities</button></li>
                <li><button onclick="showTab('users')">Manage Users</button></li>
            </ul>
        </nav>
    </header>

    <section id="cities-tab" class="tab-content">
        <h2>Cities</h2>
        <h3>Add New City</h3>
        <form id="add-city-form" class="city-form">
            <input type="text" id="city-name" placeholder="City Name" required />
            <input type="text" id="city-country" placeholder="Country" required />
            <input type="text" id="city-region" placeholder="Region" required />
            <button type="submit">Add City</button>
        </form>
        <div id="cities-container" aria-live="polite">Loading cities...</div>
    </section>

    <section id="users-tab" class="tab-content" style="display:none;">
        <h2>Users</h2>
        <div id="users-container" aria-live="polite">Loading users...</div>
    </section>
</main>
</body>

<script src="~/scripts/dashboard.js" defer></script>