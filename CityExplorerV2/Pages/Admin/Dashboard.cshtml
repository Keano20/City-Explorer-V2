@page
@model CityExplorerV2.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<main>
    <header>
        <h1>Admin Dashboard</h1>
        <nav aria-label="Dashboard Navigation">
            <ul>
                <li><button onclick="showTab('cities')">Manage Cities</button></li>
                <li><button onclick="showTab('users')">Manage Users</button></li>
            </ul>
        </nav>
    </header>

    <section id="cities-tab" class="tab-content">
        <h2>Cities</h2>
        <div id="cities-container" aria-live="polite">Loading cities...</div>
    </section>

    <section id="users-tab" class="tab-content" style="display:none;">
        <h2>Users</h2>
        <div id="users-container" aria-live="polite">Loading users...</div>
    </section>
</main>

<script src="~/scripts/dashboard.js" defer></script>